<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Мотивационный текст (кликабельный для обновления) -->
    <TextView
        android:id="@+id/widget_motivation_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Загрузка..."
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:paddingBottom="12dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground" />

    <!-- Good/Bad счетчики -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingBottom="12dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/widget_good_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#4CAF50" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Good"
                android:textSize="14sp"
                android:textColor="#4CAF50" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/widget_bad_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#F44336" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bad"
                android:textSize="14sp"
                android:textColor="#F44336" />
        </LinearLayout>
    </LinearLayout>

    <!-- Прогресс бар - используем фиксированные размеры, так как RemoteViews не поддерживает динамический layout_weight -->
    <LinearLayout
        android:id="@+id/widget_progress_container"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:orientation="horizontal"
        android:background="#E0E0E0"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/widget_progress_good"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:background="#4CAF50"
            android:minWidth="1dp" />

        <TextView
            android:id="@+id/widget_progress_bad"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:background="#F44336"
            android:minWidth="1dp" />
    </LinearLayout>

    <!-- Кнопка открытия приложения -->
    <TextView
        android:id="@+id/widget_open_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Открыть приложение"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="12dp"
        android:background="#4CAF50" />

</LinearLayout>
