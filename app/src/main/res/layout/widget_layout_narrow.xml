<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#FF000000"
    android:padding="12dp"
    android:gravity="center_vertical">

    <!-- Good счетчик -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginEnd="8dp">
        
        <TextView
            android:id="@+id/widget_good_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#4CAF50" />
        
        <TextView
            android:id="@+id/widget_good_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Good"
            android:textSize="12sp"
            android:textColor="#4CAF50" />
    </LinearLayout>

    <!-- Лозунг (по центру) -->
    <TextView
        android:id="@+id/widget_motivation_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Загрузка..."
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        android:gravity="center"
        android:paddingHorizontal="8dp"
        android:maxLines="2"
        android:ellipsize="end" />

    <!-- Таймер -->
    <TextView
        android:id="@+id/widget_timer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="12sp"
        android:textColor="#AAAAAA"
        android:gravity="center"
        android:paddingHorizontal="8dp" />

    <!-- Bad счетчик -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="8dp">
        
        <TextView
            android:id="@+id/widget_bad_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#F44336" />
        
        <TextView
            android:id="@+id/widget_bad_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bad"
            android:textSize="12sp"
            android:textColor="#F44336" />
    </LinearLayout>

    <!-- Кнопка настроек виджета (для Samsung) -->
    <TextView
        android:id="@+id/widget_settings_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:text="⚙"
        android:textSize="18sp"
        android:textColor="#CCCCCC"
        android:gravity="center"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:padding="4dp"
        android:clickable="true"
        android:focusable="true" />

</LinearLayout>

